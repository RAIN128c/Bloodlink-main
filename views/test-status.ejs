<!DOCTYPE html>
<html lang="th">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>สถานะผลตรวจเลือด - BloodLink</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400;500;600;700&family=Inter:wght@400;500;600;700&display=swap"
        rel="stylesheet">
    <style>
        /* Scrollable Status List */
        .status-cards-container {
            max-height: 500px;
            overflow-y: auto;
            padding-right: 8px;
        }

        .status-cards-container::-webkit-scrollbar {
            width: 6px;
        }

        .status-cards-container::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 3px;
        }

        .status-cards-container::-webkit-scrollbar-thumb {
            background: #c4c4c4;
            border-radius: 3px;
        }

        /* Process Badge */
        .process-badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
            margin-left: 8px;
        }

        .process-badge.waiting {
            background: #fef3c7;
            color: #d97706;
        }

        .process-badge.received {
            background: #dbeafe;
            color: #2563eb;
        }

        .process-badge.testing {
            background: #fef9c3;
            color: #ca8a04;
        }

        .process-badge.completed {
            background: #dcfce7;
            color: #16a34a;
        }

        /* Current Date Display */
        .current-date-text {
            color: #A59CFD;
            font-weight: 600;
            font-size: 16px;
        }

        /* Sidebar Scrollable */
        .no-test-list {
            max-height: 400px;
            overflow-y: auto;
        }
    </style>
</head>

<body>
    <div class="dashboard-container">
        <!-- Shared sidebar -->
        <%- include('partials/sidebar') %>

            <!-- Main content -->
            <main class="main-content">
                <!-- Shared header (Home, search, profile) -->
                <%- include('partials/header') %>

                    <div class="content-area">
                        <div class="test-status-layout">
                            <!-- Left Column: Status List -->
                            <div class="status-list-section">
                                <div class="status-page-header">
                                    <h1 class="page-title">สถานะผลตรวจเลือด</h1>
                                    <a href="/results" class="goto-results-btn">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor" stroke-width="2">
                                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                            <polyline points="14 2 14 8 20 8"></polyline>
                                            <line x1="16" y1="13" x2="8" y2="13"></line>
                                            <line x1="16" y1="17" x2="8" y2="17"></line>
                                            <polyline points="10 9 9 9 8 9"></polyline>
                                        </svg>
                                        ไปหน้าผลตรวจเลือด
                                    </a>
                                </div>

                                <div class="status-header-row">
                                    <h2 class="section-subtitle">
                                        <span class="current-date-text">
                                            <%= todayStr || 'วันนี้' %>
                                        </span>
                                    </h2>
                                    <div class="filter-wrapper">
                                        <span class="filter-label">การเรียง</span>
                                        <div class="status-filter-tabs">
                                            <button class="filter-tab active" data-filter="all">ทั้งหมด</button>
                                            <button class="filter-tab" data-filter="received">ได้รับเลือด</button>
                                            <button class="filter-tab" data-filter="testing">กำลังตรวจ</button>
                                            <button class="filter-tab" data-filter="completed">เสร็จสิ้น</button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Scrollable Status Cards -->
                                <div class="status-cards-container">
                                    <% if (typeof patients !=='undefined' && patients.length> 0) { %>
                                        <% patients.forEach(patient=> { %>
                                            <div class="status-card" data-status="<%= patient.indicator %>">
                                                <div class="status-card-content">
                                                    <div class="status-card-header">
                                                        <h3 class="status-hn">HN : <%= patient.hn %>
                                                        </h3>
                                                        <div class="status-indicator <%= patient.indicator %>">
                                                            <% if (patient.indicator==='completed' ) { %>
                                                                <svg width="24" height="24" viewBox="0 0 24 24"
                                                                    fill="none" stroke="currentColor" stroke-width="2">
                                                                    <polyline points="20 6 9 17 4 12"></polyline>
                                                                </svg>
                                                                <% } else if (patient.indicator==='testing' ) { %>
                                                                    <svg width="24" height="24" viewBox="0 0 24 24"
                                                                        fill="none" stroke="currentColor"
                                                                        stroke-width="2">
                                                                        <path
                                                                            d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z">
                                                                        </path>
                                                                        <polyline points="14 2 14 8 20 8"></polyline>
                                                                        <line x1="16" y1="13" x2="8" y2="13"></line>
                                                                        <line x1="16" y1="17" x2="8" y2="17"></line>
                                                                    </svg>
                                                                    <% } else if (patient.indicator==='received' ) { %>
                                                                        <svg width="24" height="24" viewBox="0 0 24 24"
                                                                            fill="none" stroke="currentColor"
                                                                            stroke-width="2">
                                                                            <path
                                                                                d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4">
                                                                            </path>
                                                                            <polyline points="7 10 12 15 17 10">
                                                                            </polyline>
                                                                            <line x1="12" y1="15" x2="12" y2="3"></line>
                                                                        </svg>
                                                                        <% } else { %>
                                                                            <svg width="24" height="24"
                                                                                viewBox="0 0 24 24" fill="none"
                                                                                stroke="currentColor" stroke-width="2">
                                                                                <path
                                                                                    d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2">
                                                                                </path>
                                                                                <circle cx="12" cy="7" r="4"></circle>
                                                                                <line x1="20" y1="8" x2="20" y2="14">
                                                                                </line>
                                                                                <line x1="23" y1="11" x2="17" y2="11">
                                                                                </line>
                                                                            </svg>
                                                                            <% } %>
                                                        </div>
                                                    </div>
                                                    <p class="status-patient-info">
                                                        <%= patient.name %>
                                                            <%= patient.surname %>
                                                                <span class="process-badge <%= patient.indicator %>">
                                                                    <%= patient.process %>
                                                                </span>
                                                    </p>
                                                    <p style="font-size: 12px; color: #6b7280; margin: 4px 0;">
                                                        <%= patient.timestamp || '-' %>
                                                    </p>
                                                    <a href="/patient-detail?hn=<%= patient.hn %>"
                                                        class="check-status-btn"
                                                        style="text-decoration: none;">ตรวจสอบ</a>
                                                </div>
                                            </div>
                                            <% }); %>
                                                <% } else { %>
                                                    <div class="no-data-message">
                                                        <p>ไม่พบข้อมูลสถานะ<% if (currentFilter !=='all' ) { %>
                                                                สำหรับตัวกรองนี้<% } %>
                                                        </p>
                                                    </div>
                                                    <% } %>
                                </div>
                            </div>

                            <!-- Right Column: No Test Sidebar -->
                            <div class="no-test-sidebar">
                                <div class="sidebar-header">
                                    <h3>รายชื่อผู้ป่วยที่ยังไม่มีการตรวจ</h3>
                                    <button class="close-sidebar-btn" id="closeSidebarBtn">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor" stroke-width="2">
                                            <line x1="18" y1="6" x2="6" y2="18"></line>
                                            <line x1="6" y1="6" x2="18" y2="18"></line>
                                        </svg>
                                    </button>
                                </div>

                                <div class="sidebar-date">
                                    <%= todayStr || 'วันนี้' %>
                                </div>

                                <div class="no-test-list">
                                    <% if (typeof patientsWithoutTest !=='undefined' && patientsWithoutTest.length> 0) {
                                        %>
                                        <% patientsWithoutTest.forEach(patient=> { %>
                                            <div class="no-test-card">
                                                <h4>
                                                    <%= patient.name %>
                                                        <%= patient.surname %>
                                                </h4>
                                                <p>HN: <%= patient.hn %>
                                                </p>
                                                <p style="color: #737373; font-size: 12px;">ยังไม่มีการตรวจ</p>
                                            </div>
                                            <% }); %>
                                                <% } else { %>
                                                    <div class="no-test-card">
                                                        <p style="color: #16a34a;">✓ ผู้ป่วยทุกคนได้รับการตรวจแล้ว</p>
                                                    </div>
                                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
            </main>

            <!-- Shared help component -->
            <%- include('partials/help') %>
                <%- include('partials/popup') %>
    </div>

    <script src="/js/dashboard.js"></script>
    <script>
        // Close sidebar button
        document.getElementById('closeSidebarBtn')?.addEventListener('click', function () {
            const sidebar = document.querySelector('.no-test-sidebar');
            sidebar.style.display = 'none';
        });

        // Client-side filtering (no page reload)
        const filterTabs = document.querySelectorAll('.filter-tab');
        const statusCards = document.querySelectorAll('.status-card');
        const noDataMessage = document.querySelector('.no-data-message');

        filterTabs.forEach(tab => {
            tab.addEventListener('click', function () {
                const filter = this.dataset.filter;

                // Update active tab
                filterTabs.forEach(t => t.classList.remove('active'));
                this.classList.add('active');

                // Filter cards
                let visibleCount = 0;
                statusCards.forEach(card => {
                    const cardStatus = card.dataset.status;
                    if (filter === 'all' || cardStatus === filter) {
                        card.style.display = 'block';
                        visibleCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Show/hide no data message
                if (noDataMessage) {
                    noDataMessage.style.display = visibleCount === 0 ? 'block' : 'none';
                }
            });
        });
    </script>
</body>

</html>