<aside class="sidebar">
    <div class="sidebar-content">
        <!-- Logo Section -->
        <div class="logo-section">
            <img src="/images/logo.png" alt="BloodLink Logo" class="logo" onerror="this.style.display='none'">
        </div>

        <!-- Clock Widget -->
        <div class="clock-widget">
            <div class="clock-inner">
                <div class="time" id="currentTime">00:00</div>
                <div class="date-thai" id="currentDateThai">Loading...</div>
                <div class="date-eng" id="currentDateEng">Loading...</div>
            </div>
        </div>

        <!-- Add Button -->
        <% if (isLab) { %>
            <button class="add-btn" id="addBtn" aria-label="Add new patient" onclick="showLabRestrictionPopup()">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                    <path d="M12 5v14M5 12h14" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </button>
            <% } else { %>
                <a href="/add-patient" class="add-btn" id="addBtn" aria-label="Add new patient">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                        <path d="M12 5v14M5 12h14" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </a>
                <% } %>

                    <!-- Navigation Menu -->
                    <nav class="nav-menu">
                        <a href="/results" class="nav-item" data-page="results">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"
                                    stroke-linecap="round" stroke-linejoin="round" />
                                <polyline points="14 2 14 8 20 8" stroke-linecap="round" stroke-linejoin="round" />
                                <line x1="16" y1="13" x2="8" y2="13" stroke-linecap="round" stroke-linejoin="round" />
                                <line x1="16" y1="17" x2="8" y2="17" stroke-linecap="round" stroke-linejoin="round" />
                                <polyline points="10 9 9 9 8 9" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <span>ผลตรวจเลือด</span>
                            <span class="badge">3</span>
                        </a>
                        <a href="/history" class="nav-item" data-page="history">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" stroke-linecap="round"
                                    stroke-linejoin="round" />
                                <circle cx="12" cy="7" r="4" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <span>ประวัติผู้ป่วย</span>
                        </a>
                        <a href="/appointments" class="nav-item" data-page="appointments">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2" stroke-linecap="round"
                                    stroke-linejoin="round" />
                                <line x1="16" y1="2" x2="16" y2="6" stroke-linecap="round" stroke-linejoin="round" />
                                <line x1="8" y1="2" x2="8" y2="6" stroke-linecap="round" stroke-linejoin="round" />
                                <line x1="3" y1="10" x2="21" y2="10" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <span>วันนัดหมาย</span>
                        </a>
                    </nav>

                    <!-- Logout Button -->
                    <button class="logout-btn" id="logoutBtn">
                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" stroke-linecap="round"
                                stroke-linejoin="round" />
                            <polyline points="16 17 21 12 16 7" stroke-linecap="round" stroke-linejoin="round" />
                            <line x1="21" y1="12" x2="9" y2="12" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <span>ออกจากระบบ</span>
                    </button>
    </div>
</aside>